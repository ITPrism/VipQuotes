<?xml version="1.0" encoding="utf-8"?>
<metadata>
    <layout title="COM_VIPQUOTES_VIEW_AUTHORS_TITLE">
        <message>
            <![CDATA[COM_VIPQUOTES_VIEW_AUTHORS_DESC]]>
        </message>
    </layout>
    
    <!-- Add fields to the parameters object for the layout. -->
    <fields name="params">
        <fieldset name="basic">
            <field name="authors_order_by" type="list" default="0" label="COM_VIPQUOTES_ORDER_BY" description="COM_VIPQUOTES_AUTHORS_ORDER_BY_DESC">
	            <option value="0">COM_VIPQUOTES_ORDERING</option>
	            <option value="1">COM_VIPQUOTES_QUOTES_NUMBER</option>
	            <option value="2">COM_VIPQUOTES_QUOTES_NUMBER_REVERSED</option>
	            <option value="3">COM_VIPQUOTES_AUTHOR_NAME</option>
	            <option value="4">COM_VIPQUOTES_AUTHOR_NAME_REVERSED</option>
	        </field>
	        <field name="authors_bio_length" type="text" default="100" size="50" label="COM_VIPQUOTES_BIO_LENGTH" description="COM_VIPQUOTES_BIO_LENGTH_DESC" />
            <field name="authors_limit" type="text" default="20" label="COM_VIPQUOTES_LIMIT" description="COM_VIPQUOTES_LIMIT_DESC" />
	        <field name="authors_display_image" type="radio" default="1" label="COM_VIPQUOTES_DISPLAY_IMAGE" description="COM_VIPQUOTES_DISPLAY_IMAGE_DESC" class="btn-group">
	            <option value="0">JNO</option>
	            <option value="1">JYES</option>
	        </field>
	        <field name="authors_breadcrumb" type="radio" default="1" label="COM_VIPQUOTES_AUTHORS_BREADCRUMB" description="COM_VIPQUOTES_AUTHORS_BREADCRUMB_DESC" class="btn-group">
	            <option value="0">JNO</option>
	            <option value="1">JYES</option>
	        </field>
	        <field name="authors_display_filter_ordering" type="radio" default="0" label="COM_VIPQUOTES_DISPLAY_FILTER_ORDERING" description="COM_VIPQUOTES_DISPLAY_FILTER_ORDERING_DESC" class="btn-group">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
            <field name="author_display_counter" type="radio" default="1" label="COM_VIPQUOTES_DISPLAY_NUMBER" description="COM_VIPQUOTES_DISPLAY_NUMBER_DESC" class="btn-group">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
            <field name="author_display_copyright" type="radio" default="0" label="COM_VIPQUOTES_COPYRIGHT" description="COM_VIPQUOTES_COPYRIGHT_DESC" class="btn-group">
                <option value="0">JNO</option>
