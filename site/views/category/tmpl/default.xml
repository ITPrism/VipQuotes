<?xml version="1.0" encoding="utf-8"?>
<metadata>
    <layout title="COM_VIPQUOTES_VIEW_CATEGORY_TITLE">
        <message>
            <![CDATA[COM_VIPQUOTES_VIEW_CATEGORY_DESC]]>
        </message>
    </layout>

    <!-- Add fields to the request variables for the layout. -->
    <fields name="request">
        <fieldset name="request" addfieldpath="/administrator/components/com_vipquotes/models/fields" >
            <field name="id" type="vqcategories" 
                label="COM_VIPQUOTES_VIEW_CATEGORY_TITLE" 
                description="COM_VIPQUOTES_CATEGORY_DESC" 
                required="1"
            />
        </fieldset>
    </fields>

    <!-- Add fields to the parameters object for the layout. -->
    <fields name="params">
        <fieldset name="basic">
            <field name="category_list_view" type="list" default="list" label="COM_VIPQUOTES_CATEGORY_LAYOUT" description="COM_VIPQUOTES_CATEGORY_LAYOUT_DESC">
                <option value="table">COM_VIPQUOTES_TABLE</option>
                <option value="list">COM_VIPQUOTES_LIST</option>
            </field>
            <field name="category_quotes_order_by" type="list" default="0" label="COM_VIPQUOTES_ORDER_BY" description="COM_VIPQUOTES_CATEGORY_ORDER_BY_DESC">
                <option value="0">COM_VIPQUOTES_ORDERING</option>
                <option value="1">COM_VIPQUOTES_DATE</option>
                <option value="2">COM_VIPQUOTES_DATE_REVERSE</option>
                <option value="3">COM_VIPQUOTES_AUTHOR_NAME</option>
            </field>
            <field name="category_quotes_limit" type="text" default="20" label="COM_VIPQUOTES_LIMIT" description="COM_VIPQUOTES_LIMIT_DESC" />
            <field name="category_display_subcategories" type="radio" default="0" label="COM_VIPQUOTES_DISPLAY_SUBCATEGORIES" description="COM_VIPQUOTES_DISPLAY_SUBCATEGORIES_DESC" class="btn-group">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
            <field name="category_display_subcategories_counter" type="radio" default="0" label="COM_VIPQUOTES_DISPLAY_NUMBER" description="COM_VIPQUOTES_DISPLAY_SUBCATEGORY_NUMBER_DESC" class="btn-group">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
            <field name="category_breadcrumb" type="radio" default="0" label="COM_VIPQUOTES_BREADCRUMB" description="COM_VIPQUOTES_BREADCRUMB_DESC" class="btn-group">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
            <field name="category_display_author" type="radio" default="1" label="COM_VIPQUOTES_DISPLAY_AUTHOR" description="COM_VIPQUOTES_DISPLAY_AUTHOR_DESC" class="btn-group">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
            <field name="category_display_info" type="radio" default="0" label="COM_VIPQUOTES_DISPLAY_INFORMATION" description="COM_VIPQUOTES_DISPLAY_INFORMATION_DESC" class="btn-group">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
            <field name="category_display_publisher" type="radio" default="0" label="COM_VIPQUOTES_DISPLAY_PUBLISHER" description="COM_VIPQUOTES_DISPLAY_PUBLISHER_DESC" class="btn-group">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
            <field name="category_display_filter_author" type="radio" default="0" label="COM_VIPQUOTES_DISPLAY_FILTER_AUTHOR" description="COM_VIPQUOTES_DISPLAY_FILTER_AUTHOR_DESC" class="btn-group">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
            <field name="category_display_filter_user" type="radio" default="0" label="COM_VIPQUOTES_DISPLAY_FILTER_USER" description="COM_VIPQUOTES_DISPLAY_FILTER_USER_DESC" class="btn-group">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
            <field name="category_display_filter_ordering" type="radio" default="0" label="COM_VIPQUOTES_DISPLAY_FILTER_ORDERING" description="COM_VIPQUOTES_DISPLAY_FILTER_ORDERING_DESC" class="btn-group">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>

            <field name="show_pagination" type="list"
                   description="JGLOBAL_PAGINATION_DESC"
                   label="JGLOBAL_PAGINATION_LABEL"
                    >
                <option value="">JGLOBAL_USE_GLOBAL</option>
                <option value="0">JHIDE</option>
                <option value="1">JSHOW</option>
                <option value="2">JGLOBAL_AUTO</option>
            </field>

            <field name="show_pagination_results" type="list"
                   label="JGLOBAL_PAGINATION_RESULTS_LABEL"
                   description="JGLOBAL_PAGINATION_RESULTS_DESC">

                <option value="">JGLOBAL_USE_GLOBAL</option>
                <option value="0">JHIDE</option>
                <option value="1">JSHOW</option>
            </field>
        </fieldset>
    </fields>
    
</metadata>