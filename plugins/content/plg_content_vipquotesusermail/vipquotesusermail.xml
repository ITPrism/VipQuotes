<?xml version="1.0" encoding="utf-8"?>
<extension version="3.2" type="plugin" group="content" method="upgrade">
    <name>PLG_CONTENT_VIPQUOTESUSERMAIL</name>
    <author>Todor Iliev</author>
    <copyright>Copyright (C) 2014 Todor Iliev ( ITPrism.com ). All rights reserved.</copyright>
    <license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
    <authorEmail>todor@itprism.com</authorEmail>
    <authorUrl>http://itprism.com</authorUrl>
    <version>1.0</version>
    <creationDate>07 January, 2014</creationDate>
    <description><![CDATA[
    <p>Content - VipQuotes - User Mail is a plugin that sends notification mails to users.</p>
    <p><a href="http://itprism.com/" target="_blank">Subscribe for the newsletter</a> to receive information about updates and new ITPrism extensions.</p>
    <p>Please, <a href="http://extensions.joomla.org/extensions/news-display/quotes/6877" target="_blank">vote for the extension</a> on Joomla! Extensions Directory</p>
    ]]></description>
    
    <help url="PLG_CONTENT_VIPQUOTESUSERMAIL_HELP_URL"/>
    
    <files>
        <filename plugin="vipquotesusermail">vipquotesusermail.php</filename>
        <filename>index.html</filename>
        
        <folder>language</folder>
    </files>
    
    <config>
		<fields name="params">
			<fieldset name="basic" addfieldpath="/administrator/components/com_vipquotes/models/fields">
                
                <field name="send_when_publish" type="vqemails" default="0" label="PLG_CONTENT_VIPQUOTESUSERMAIL_NOTIFY_WHEN_PUBLISH" description="PLG_CONTENT_VIPQUOTESUSERMAIL_NOTIFY_WHEN_PUBLISH_DESC" />
                
                <field name="email_mode" type="list" default="html" label="PLG_CONTENT_VIPQUOTESUSERMAIL_EMAIL_MODE" description="PLG_CONTENT_VIPQUOTESUSERMAIL_EMAIL_MODE_DESC" >
                   <option value="plain">PLG_CONTENT_VIPQUOTESUSERMAIL_PLAIN</option>
                   <option value="html">PLG_CONTENT_VIPQUOTESUSERMAIL_HTML</option>
                </field>
                
			</fieldset>
	            
        </fields>
	</config>
</extension>
