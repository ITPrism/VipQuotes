<?xml version="1.0" encoding="utf-8"?>
<extension version="3.3" type="plugin" group="content" method="upgrade">
    <name>PLG_CONTENT_VIPQUOTESADMINMAIL</name>
    <author>Todor Iliev</author>
    <copyright>Copyright (C) 2014 Todor Iliev ( ITPrism.com ). All rights reserved.</copyright>
    <license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
    <authorEmail>todor@itprism.com</authorEmail>
    <authorUrl>http://itprism.com</authorUrl>
    <version>2.7</version>
    <creationDate>05 October, 2014</creationDate>
    <description><![CDATA[
    <p>Content - VipQuotes - Admin Mail is a plugin that sends notification mails to administrator.</p>
    <p><a href="http://itprism.com/" target="_blank">Subscribe for the newsletter</a> to receive information about updates and new ITPrism extensions.</p>
    <p>Please, <a href="http://extensions.joomla.org/extensions/news-display/quotes/6877" target="_blank">vote for the extension</a> on Joomla! Extensions Directory</p>
    ]]></description>
    
    <help url="PLG_CONTENT_VIPQUOTESADMINMAIL_HELP_URL"/>
    
    <files>
        <filename plugin="vipquotesadminmail">vipquotesadminmail.php</filename>
        <filename>index.html</filename>
        
        <folder>language</folder>
    </files>
    
    <config>
		<fields name="params">
			<fieldset name="basic" addfieldpath="/administrator/components/com_vipquotes/models/fields">
                
                <field name="send_when_post" type="vqemails" default="0" label="PLG_CONTENT_VIPQUOTESADMINMAIL_NOTIFY_WHEN_POST" description="PLG_CONTENT_VIPQUOTESADMINMAIL_NOTIFY_WHEN_POST_DESC" />
                
                <field name="email_mode" type="list" default="html" label="PLG_CONTENT_VIPQUOTESADMINMAIL_EMAIL_MODE" description="PLG_CONTENT_VIPQUOTESADMINMAIL_EMAIL_MODE_DESC" >
                   <option value="plain">PLG_CONTENT_VIPQUOTESADMINMAIL_PLAIN</option>
                   <option value="html">PLG_CONTENT_VIPQUOTESADMINMAIL_HTML</option>
                </field>
                
			</fieldset>
	            
        </fields>
	</config>
</extension>
