<?xml version="1.0" encoding="UTF-8"?>
<project name="vipquotes" default="build" basedir=".">
	<description>Vip Quotes Lite Ant Build File</description>

	<!-- load variables from config file -->
	<property name="cfg.configFile" location="antconfig.txt" />
	<loadproperties srcfile="${cfg.configFile}" />

	<!-- auto values but should be checked -->
	<property name="cfg.comName" value="com_${cfg.name}" />
	<property name="cfg.pkgName" value="pkg_${cfg.name}" />
	
	<!-- destination directories -->
	<property name="cfg.adminDestDir" location="${cfg.pkgDir}/admin" />
	<property name="cfg.adminLanguageDestDir" location="${cfg.pkgDir}/admin/language" />
	<property name="cfg.mediaDestDir" location="${cfg.pkgDir}/media" />
	<property name="cfg.siteDestDir" location="${cfg.pkgDir}/site" />
	<property name="cfg.siteLanguageFilesDir" location="${cfg.pkgDir}/site/language" />
    <property name="cfg.librariesDestDir" location="${cfg.pkgDir}/libraries" />
	
	<property name="cfg.pluginsDestDir" location="${cfg.pkgDir}/plugins" />
	<property name="cfg.modulesDestDir" location="${cfg.pkgDir}/modules" />

	<!-- Admin, Site and Media source -->
	<property name="cfg.adminSourceDir" location="${cfg.sourceDir}/administrator/components" />
	<property name="cfg.siteSourceDir" location="${cfg.sourceDir}/components" />
	<property name="cfg.mediaSourceDir" location="${cfg.sourceDir}/media" />
    <property name="cfg.librariesSourceDir" location="${cfg.sourceDir}/libraries" />

	<!-- language source -->
	<property name="cfg.adminLanguageSourceDir" location="${cfg.sourceDir}/administrator/language/en-GB" />
	<property name="cfg.siteLanguageSourceDir" location="${cfg.sourceDir}/language/en-GB" />

	<!-- plugins source -->
    <property name="cfg.pluginsSourceDir" location="${cfg.sourceDir}/plugins" />
	
	<!-- modules source -->
    <property name="cfg.modulesSourceDir" location="${cfg.sourceDir}/modules" />
	
	<target name="build" depends="init, build_component, info" />

	<target name="init" description="creates nessecary directory to build with">
		<mkdir dir="${cfg.pkgDir}/admin" />
		<mkdir dir="${cfg.pkgDir}/admin/language" />
		<mkdir dir="${cfg.pkgDir}/media" />
		<mkdir dir="${cfg.pkgDir}/site" />
		<mkdir dir="${cfg.pkgDir}/site/language" />
	    <mkdir dir="${cfg.pkgDir}/libraries" />
		<mkdir dir="${cfg.pkgDir}/packages" />
		<mkdir dir="${cfg.pkgDir}/modules" />
		<mkdir dir="${cfg.pkgDir}/plugins" />
		
		<!-- plugins -->
		<mkdir dir="${cfg.pkgDir}/plugins/search/plg_search_vipquotes" />
		<mkdir dir="${cfg.pkgDir}/plugins/search/plg_search_vipquotes/language" />
		
		<!-- modules -->
        <mkdir dir="${cfg.pkgDir}/modules/mod_viplastquotes" />
        <mkdir dir="${cfg.pkgDir}/modules/mod_viplastquotes/language" />
        <mkdir dir="${cfg.pkgDir}/modules/mod_viprandomquotes" />
        <mkdir dir="${cfg.pkgDir}/modules/mod_viprandomquotes/language" />
	    <mkdir dir="${cfg.pkgDir}/modules/mod_vipquotesabc" />
        <mkdir dir="${cfg.pkgDir}/modules/mod_vipquotesabc/language" />
	    <mkdir dir="${cfg.pkgDir}/modules/mod_vipquotessearch" />
        <mkdir dir="${cfg.pkgDir}/modules/mod_vipquotessearch/language" />
	    
	</target>

	<!-- copy administration files of the componet -->
	<copy todir="${cfg.adminDestDir}">
		<fileset dir="${cfg.adminSourceDir}/${cfg.comName}">
			<exclude name="**/${cfg.pkgName}.xml" />
			<exclude name="**/${cfg.name}.xml" />
			<exclude name="**/README.md" />
			<exclude name="**/install.php" />
		</fileset>
	</copy>

	<!-- copy install helper of the componet -->
    <copy file="${cfg.adminSourceDir}/${cfg.comName}/helpers/install.php" todir="${cfg.adminDestDir}/helpers/" />
	
	<!-- copy site files of the componet -->
	<copy todir="${cfg.siteDestDir}">
		<fileset dir="${cfg.siteSourceDir}/${cfg.comName}">
			<include name="**/*" />
		</fileset>
	</copy>

	<!-- copy media files of the componet -->
	<copy todir="${cfg.mediaDestDir}">
		<fileset dir="${cfg.mediaSourceDir}/${cfg.comName}">
			<include name="**/*" />
		</fileset>
	</copy>

	<!-- copy admin language files of the component -->
	<copy file="${cfg.adminLanguageSourceDir}/en-GB.${cfg.comName}.ini" todir="${cfg.adminLanguageDestDir}/en-GB/" />
	<copy file="${cfg.adminLanguageSourceDir}/en-GB.${cfg.comName}.sys.ini" todir="${cfg.adminLanguageDestDir}/en-GB/" />
	<copy file="${cfg.adminLanguageSourceDir}/index.html" todir="${cfg.adminLanguageDestDir}/" />
	<copy file="${cfg.adminLanguageSourceDir}/index.html" todir="${cfg.adminLanguageDestDir}/en-GB/" />

	<!-- copy site language files of the component -->
	<copy file="${cfg.siteLanguageSourceDir}/en-GB.${cfg.comName}.ini" todir="${cfg.siteLanguageFilesDir}/en-GB/" />
	<copy file="${cfg.siteLanguageSourceDir}/index.html" todir="${cfg.siteLanguageFilesDir}/" />
	<copy file="${cfg.siteLanguageSourceDir}/index.html" todir="${cfg.siteLanguageFilesDir}/en-GB/" />

	<!-- copy main files of the component -->
    <copy file="${cfg.adminSourceDir}/${cfg.comName}/install.php" todir="${cfg.pkgDir}" />
    <copy file="${cfg.adminSourceDir}/${cfg.comName}/README.md" todir="${cfg.pkgDir}" />
    <copy file="${cfg.adminSourceDir}/${cfg.comName}/${cfg.pkgName}.xml" todir="${cfg.pkgDir}" />
    <copy file="${cfg.adminSourceDir}/${cfg.comName}/${cfg.name}.xml" todir="${cfg.pkgDir}" />

    <!-- copy library files of the componet -->
    <copy todir="${cfg.librariesDestDir}/lib_${cfg.name}">
        <fileset dir="${cfg.librariesSourceDir}/${cfg.name}">
            <include name="**/*" />
        </fileset>
    </copy>
    
	<!-- COPY PLUGINS -->
	
	<!-- SEARCH/VIPQUOTES -->
	
	<!-- copy plugins files of search/vipquotes -->
    <copy todir="${cfg.pluginsDestDir}/search/plg_search_vipquotes">
        <fileset dir="${cfg.pluginsSourceDir}/search/vipquotes">
            <include name="**/*" />
        </fileset>
    </copy>
	
	<!-- copy plugin language files of search/vipquotes -->
    <copy file="${cfg.adminLanguageSourceDir}/en-GB.plg_search_vipquotes.ini" todir="${cfg.pluginsDestDir}/search/plg_search_vipquotes/language/en-GB" />
    <copy file="${cfg.adminLanguageSourceDir}/en-GB.plg_search_vipquotes.sys.ini" todir="${cfg.pluginsDestDir}/search/plg_search_vipquotes/language/en-GB" />
    <copy file="${cfg.adminLanguageSourceDir}/index.html" todir="${cfg.pluginsDestDir}/search/plg_search_vipquotes/language" />
    <copy file="${cfg.adminLanguageSourceDir}/index.html" todir="${cfg.pluginsDestDir}/search/plg_search_vipquotes/language/en-GB/" />
    
	<!-- END COPY PLUGINS -->
	
	<!-- COPY MODULES -->
	    
    <!-- MOD_VIPLASTQUOTES -->
        
    <!-- copy module files of mod_viplastquotes -->
    <copy todir="${cfg.modulesDestDir}/mod_viplastquotes">
        <fileset dir="${cfg.modulesSourceDir}/mod_viplastquotes">
            <include name="**/*" />
        </fileset>
    </copy>

    <!-- copy module language files of mod_viplastquotes -->
    <copy file="${cfg.siteLanguageSourceDir}/en-GB.mod_viplastquotes.ini" todir="${cfg.modulesDestDir}/mod_viplastquotes/language/en-GB" />
    <copy file="${cfg.siteLanguageSourceDir}/en-GB.mod_viplastquotes.sys.ini" todir="${cfg.modulesDestDir}/mod_viplastquotes/language/en-GB" />
    <copy file="${cfg.siteLanguageSourceDir}/index.html" todir="${cfg.modulesDestDir}/mod_viplastquotes/language" />
    <copy file="${cfg.siteLanguageSourceDir}/index.html" todir="${cfg.modulesDestDir}/mod_viplastquotes/language/en-GB/" />

    <!-- MOD_VIPRANDOMQUOTES -->
            
    <!-- copy module files of mod_viprandomquotes -->
    <copy todir="${cfg.modulesDestDir}/mod_viprandomquotes">
        <fileset dir="${cfg.modulesSourceDir}/mod_viprandomquotes">
            <include name="**/*" />
        </fileset>
    </copy>

    <!-- copy module language files of mod_viprandomquotes -->
    <copy file="${cfg.siteLanguageSourceDir}/en-GB.mod_viprandomquotes.ini" todir="${cfg.modulesDestDir}/mod_viprandomquotes/language/en-GB" />
    <copy file="${cfg.siteLanguageSourceDir}/en-GB.mod_viprandomquotes.sys.ini" todir="${cfg.modulesDestDir}/mod_viprandomquotes/language/en-GB" />
    <copy file="${cfg.siteLanguageSourceDir}/index.html" todir="${cfg.modulesDestDir}/mod_viprandomquotes/language" />
    <copy file="${cfg.siteLanguageSourceDir}/index.html" todir="${cfg.modulesDestDir}/mod_viprandomquotes/language/en-GB/" />
    
    <!-- MOD_VIPQUOTESABC -->
                
    <!-- copy module files of mod_vipquotesabc -->
    <copy todir="${cfg.modulesDestDir}/mod_vipquotesabc">
        <fileset dir="${cfg.modulesSourceDir}/mod_vipquotesabc">
            <include name="**/*" />
        </fileset>
    </copy>

    <!-- copy module language files of mod_vipquotesabc -->
    <copy file="${cfg.siteLanguageSourceDir}/en-GB.mod_vipquotesabc.ini" todir="${cfg.modulesDestDir}/mod_vipquotesabc/language/en-GB" />
    <copy file="${cfg.siteLanguageSourceDir}/en-GB.mod_vipquotesabc.sys.ini" todir="${cfg.modulesDestDir}/mod_vipquotesabc/language/en-GB" />
    <copy file="${cfg.siteLanguageSourceDir}/index.html" todir="${cfg.modulesDestDir}/mod_vipquotesabc/language" />
    <copy file="${cfg.siteLanguageSourceDir}/index.html" todir="${cfg.modulesDestDir}/mod_vipquotesabc/language/en-GB/" />
	
    <!-- MOD_VIPQUOTESSEARCH -->
    
    <!-- copy module files of mod_vipquotessearch -->
    <copy todir="${cfg.modulesDestDir}/mod_vipquotessearch">
        <fileset dir="${cfg.modulesSourceDir}/mod_vipquotessearch">
            <include name="**/*" />
        </fileset>
    </copy>

    <!-- copy module language files of mod_vipquotessearch -->
    <copy file="${cfg.siteLanguageSourceDir}/en-GB.mod_vipquotessearch.ini" todir="${cfg.modulesDestDir}/mod_vipquotessearch/language/en-GB" />
    <copy file="${cfg.siteLanguageSourceDir}/en-GB.mod_vipquotessearch.sys.ini" todir="${cfg.modulesDestDir}/mod_vipquotessearch/language/en-GB" />
    <copy file="${cfg.siteLanguageSourceDir}/index.html" todir="${cfg.modulesDestDir}/mod_vipquotessearch/language" />
    <copy file="${cfg.siteLanguageSourceDir}/index.html" todir="${cfg.modulesDestDir}/mod_vipquotessearch/language/en-GB/" />

	<!-- END COPY MODULES -->
	
	<target name="build_component" depends="init" description="packages the finaly component file">
		
		<!-- build component -->
		<zip destfile="${cfg.pkgDir}/packages/${cfg.comName}.zip" basedir="${cfg.pkgDir}" 
			includes="admin/**,media/**,site/**,${cfg.name}.xml" />
		
		<!-- build plugins -->
		<zip destfile="${cfg.pkgDir}/packages/plg_search_vipquotes.zip" basedir="${cfg.pluginsDestDir}/search/plg_search_vipquotes" />
		
		<!-- build modules -->
        <zip destfile="${cfg.pkgDir}/packages/mod_viplastquotes.zip" basedir="${cfg.modulesDestDir}/mod_viplastquotes" />
        <zip destfile="${cfg.pkgDir}/packages/mod_viprandomquotes.zip" basedir="${cfg.modulesDestDir}/mod_viprandomquotes" />
        <zip destfile="${cfg.pkgDir}/packages/mod_vipquotesabc.zip" basedir="${cfg.modulesDestDir}/mod_vipquotesabc" />
        <zip destfile="${cfg.pkgDir}/packages/mod_vipquotessearch.zip" basedir="${cfg.modulesDestDir}/mod_vipquotessearch" />
		
	    <!-- build library -->
        <zip destfile="${cfg.pkgDir}/packages/lib_${cfg.name}.zip" basedir="${cfg.librariesDestDir}/lib_${cfg.name}" />
	    
		<!-- build package -->
		<zip destfile="${cfg.pkgDir}/${cfg.pkgName}_${cfg.version}-${cfg.joomlaVersion}.zip" basedir="${cfg.pkgDir}" 
			includes="packages/**,${cfg.pkgName}.xml,install.php,README.md" />
		
	</target>

	<target name="info" description="prints information">
		<echo message="Project:                 ${cfg.name}" />
		<tstamp>
			<format property="buildtime" pattern="yyyy-MM-dd'T'HH:mm:ss" />
		</tstamp>
		<echo message="Buildtime:       ${buildtime}" />
	</target>
</project>