<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

        <field name="catid" type="category"
            label="JCATEGORY" 
            description="JFIELD_CATEGORY_DESC"
            class="inputbox" 
            extension="com_vipquotes"
        />

        <field name="published" type="list" class="inputbox"
            label="JSTATUS"
            description="JFIELD_PUBLISHED_DESC" 
            filter="intval" 
            size="1" 
            default="1"
        >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
        </field>
        
        <field name="quote" type="editor" class="inputbox" 
            label="COM_VIPQUOTES_FIELD_QUOTE" 
            description="COM_VIPQUOTES_FIELD_QUOTE_DESC"
            buttons="false" 
            show="toggle"
            filter="safehtml"
            rows="5" 
            required="true" />
            
        <field name="id" type="text" class="readonly"
            label="JGLOBAL_FIELD_ID_LABEL"
            description="JGLOBAL_FIELD_ID_DESC" 
            readonly="true" 
            default="0" 
         />

	</fieldset>
</form>