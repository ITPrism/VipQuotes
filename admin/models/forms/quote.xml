<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

        <field name="quote" type="textarea" buttons="true" hide="pagebreak,readmore,article,image"
            class="inputbox"
            filter="trim"
            rows="5" 
            label="COM_VIPQUOTES_FIELD_QUOTE" description="COM_VIPQUOTES_FIELD_QUOTE_DESC" 
            required="true" />
            
		<field name="author" type="text" class="inputbox"
			size="40" 
			label="COM_VIPQUOTES_FIELD_AUTHOR"
			filter="trim"
			description="COM_VIPQUOTES_FIELD_AUTHOR_DESC"  />

		<field name="catid" type="category"
            label="JCATEGORY" description="JFIELD_CATEGORY_DESC"
            class="inputbox" 
            extension="com_vipquotes"
        />

		<field name="published" type="list" label="JSTATUS"
            description="JFIELD_PUBLISHED_DESC" class="inputbox"
            filter="intval" size="1" default="1"
        >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
        </field>
		
		
		<field name="id" type="text" default="0" label="JGLOBAL_FIELD_ID_LABEL" 
            readonly="true" class="readonly"
            description="JGLOBAL_FIELD_ID_DESC" />

	</fieldset>
</form>