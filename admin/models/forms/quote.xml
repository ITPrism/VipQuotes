<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

		<field name="author_id" type="vqauthor"
			label="COM_VIPQUOTES_FIELD_AUTHOR"
			description="COM_VIPQUOTES_FIELD_AUTHOR_DESC"  
			filter="intval"
			state="1"
		/>

		<field name="catid" type="vqcategories"
            label="JCATEGORY" 
            description="JFIELD_CATEGORY_DESC"
        />

		<field name="published" type="radio" class="btn-group"
		    label="JSTATUS"
            description="JFIELD_PUBLISHED_DESC" 
            filter="intval" 
            default="1"
        >
            <option value="0">JUNPUBLISHED</option>
            <option value="1">JPUBLISHED</option>
        </field>
		
		
		<field name="quote" type="editor" 
            label="COM_VIPQUOTES_FIELD_QUOTE" 
            description="COM_VIPQUOTES_FIELD_QUOTE_DESC"
            buttons="false" 
            show="toggle"
            filter="safehtml"
            rows="5" 
            required="true" />
            
		<field name="id" type="text" class="readonly"
		    label="JGLOBAL_FIELD_ID_LABEL" 
		    description="JGLOBAL_FIELD_ID_DESC"
            readonly="true" 
            default="0" 
        />

	</fieldset>
</form>