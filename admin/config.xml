<?xml version="1.0" encoding="utf-8"?>
<config>
    <fieldset name="images" label="COM_VIPQUOTES_IMAGES_TITLE" description="COM_VIPQUOTES_IMAGES_PARAMS">
        <field name="images_directory" type="text" default="images/authors" label="COM_VIPQUOTES_IMAGES_DIRECTORY" description="COM_VIPQUOTES_IMAGES_DIRECTORY_DESC" />
        <field name="image_width" type="text" default="200" class="input-mini" label="COM_VIPQUOTES_IMAGE_WIDTH"
               description="COM_VIPQUOTES_IMAGE_WIDTH_DESC"/>
        <field name="image_height" type="text" default="200" class="input-mini" label="COM_VIPQUOTES_IMAGE_HEIGHT"
               description="COM_VIPQUOTES_IMAGE_HEIGHT_DESC"/>

        <field name="thumb_width" type="text" default="50" class="input-mini" label="COM_VIPQUOTES_THUMB_WIDTH"
               description="COM_VIPQUOTES_THUMB_WIDTH_DESC"/>
        <field name="thumb_height" type="text" default="50" class="input-mini" label="COM_VIPQUOTES_THUMB_HEIGHT"
               description="COM_VIPQUOTES_THUMB_HEIGHT_DESC"/>

        <field name="images_display_default" type="radio" default="1" label="COM_VIPQUOTES_DEFAULT_DISPLAY_IMAGE" description="COM_VIPQUOTES_DEFAULT_DISPLAY_IMAGE_DESC" class="btn-group">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field
            name="images_own_picture"
            type="media"
            label="COM_VIPQUOTES_DEFAULT_IMAGE"
            description="COM_VIPQUOTES_DEFAULT_IMAGE_DESC" />
    </fieldset>
    
    <fieldset name="quote" label="COM_VIPQUOTES_QUOTE" description="COM_VIPQUOTES_QUOTE_PARAMS">
        <field name="quote_display_author" type="radio" default="1" label="COM_VIPQUOTES_DISPLAY_AUTHOR" description="COM_VIPQUOTES_DISPLAY_AUTHOR_DESC" class="btn-group">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field name="quote_author_linkable" type="radio" default="1" label="COM_VIPQUOTES_DISPLAY_AUTHOR_LINK" description="COM_VIPQUOTES_DISPLAY_AUTHOR_LINK_DESC" class="btn-group">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field name="quote_display_hits" type="radio" default="1" label="COM_VIPQUOTES_DISPLAY_HITS" description="COM_VIPQUOTES_DISPLAY_HITS_DESC" class="btn-group">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
    </fieldset>
    
    <fieldset name="security" label="COM_VIPQUOTES_SECURITY" description="COM_VIPQUOTES_SECURITY_DESC">
        <field
            name="captcha"
            type="plugins"
            folder="captcha"
            default=""
            label="COM_VIPQUOTES_CAPTCHA"
            description="COM_VIPQUOTES_CAPTCHA_DESC"
            filter="cmd" >
            <option
                value="">JOPTION_USE_DEFAULT</option>
            <option
                value="0">JOPTION_DO_NOT_USE</option>
        </field>
        <field name="security_auto_publishing" type="radio" default="0" label="COM_VIPQUOTES_AUTO_PUBLISH" description="COM_VIPQUOTES_AUTO_PUBLISH_DESC" class="btn-group">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field name="security_check_quotes" type="radio" default="0" label="COM_VIPQUOTES_VERIFY" description="COM_VIPQUOTES_VERIFY_FORM_DESC" class="btn-group">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field name="security_author_auto_publishing" type="radio" default="0" label="COM_VIPQUOTES_AUTHOR_AUTO_PUBLISH" description="COM_VIPQUOTES_AUTHOR_AUTO_PUBLISH_DESC" class="btn-group">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field name="security_check_authors" type="radio" default="0" label="COM_VIPQUOTES_VERIFY_AUTHOR" description="COM_VIPQUOTES_VERIFY_AUTHOR_FORM_DESC" class="btn-group">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
    </fieldset>
    
    <fieldset name="seo" label="COM_VIPQUOTES_SEO_TITLE" description="COM_VIPQUOTES_SEO_PARAMS">
        <field name="seo_cat_to_title" type="list" default="0"  label="COM_VIPQUOTES_CATEOGRY_TO_TITLE" description="COM_VIPQUOTES_CATEOGRY_TO_TITLE_DESC" >
            <option value="0">JNONE</option>
            <option value="1">COM_VIPQUOTES_BEFORE</option>
            <option value="2">COM_VIPQUOTES_AFTER</option>
            <option value="3">COM_VIPQUOTES_ONLY_NAME</option>
        </field>
        <field name="seo_cat_as_page_heading" type="list" default="0"  label="COM_VIPQUOTES_CATEOGRY_AS_PAGEHEADING" description="COM_VIPQUOTES_CATEOGRY_AS_PAGEHEADING_DESC" >
            <option value="0">JNONE</option>
            <option value="1">COM_VIPQUOTES_BEFORE</option>
            <option value="2">COM_VIPQUOTES_AFTER</option>
            <option value="3">COM_VIPQUOTES_ONLY_NAME</option>
        </field>
        
        <field name="seo_author_to_title" type="list" default="0"  label="COM_VIPQUOTES_AUTHOR_TO_TITLE" description="COM_VIPQUOTES_AUTHOR_TO_TITLE_DESC" >
            <option value="0">JNONE</option>
            <option value="1">COM_VIPQUOTES_BEFORE</option>
            <option value="2">COM_VIPQUOTES_AFTER</option>
            <option value="3">COM_VIPQUOTES_ONLY_NAME</option>
        </field>
        <field name="seo_author_as_page_heading" type="list" default="0"  label="COM_VIPQUOTES_AUTHOR_AS_PAGEHEADING" description="COM_VIPQUOTES_AUTHOR_AS_PAGEHEADING_DESC" >
            <option value="0">JNONE</option>
            <option value="1">COM_VIPQUOTES_BEFORE</option>
            <option value="2">COM_VIPQUOTES_AFTER</option>
            <option value="3">COM_VIPQUOTES_ONLY_NAME</option>
        </field>
    </fieldset>
    
    <fieldset name="integration" label="COM_VIPQUOTES_INTEGRATION" description="COM_VIPQUOTES_INTEGRATION_PARAMS">
        <field name="integration_social_platform" type="list" default="" label="COM_VIPQUOTES_INTEGRATION_SOCIAL_PLATFORM" description="COM_VIPQUOTES_INTEGRATION_SOCIAL_PLATFORM_DESC">
            <option value="">COM_VIPQUOTES_NONE</option>
            <option value="socialcommunity">COM_VIPQUOTES_SOCIAL_COMMUNITY</option>
            <option value="gravatar">COM_VIPQUOTES_GRAVATAR</option>
            <option value="jomsocial">COM_VIPQUOTES_JOMSOCIAL</option>
            <option value="easysocial">COM_VIPQUOTES_EASYSOCIAL</option>
            <option value="easyprofile">COM_VIPQUOTES_EASYPROFILE</option>
            <option value="kunena">COM_VIPQUOTES_KUNENA</option>
        </field>
        <field name="integration_avatars_size" type="text" default="50" label="COM_VIPQUOTES_AVATARS_SIZE" description="COM_VIPQUOTES_AVATARS_SIZE_DESC" />
    </fieldset>

    <fieldset name="advanced" label="COM_VIPQUOTES_ADVANCED">
        <field name="display_author_form_notes" type="radio" default="1" label="COM_VIPQUOTES_DISPLAY_NOTES" description="COM_VIPQUOTES_DISPLAY_AUTHOR_NOTES_DESC" class="btn-group">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
    </fieldset>

    <fieldset
        name="permissions"
        label="JCONFIG_PERMISSIONS_LABEL"
        description="JCONFIG_PERMISSIONS_DESC"
        >

        <field
            name="rules"
            type="rules"
            label="JCONFIG_PERMISSIONS_LABEL"
            class="inputbox"
            filter="rules"
            validate="rules"
            component="com_vipquotes"
            section="component" />
    </fieldset>
    
</config>